---
import PostViewTitle from '../components/PostViewTitle.astro'
import {t} from '../i18n/utils'
const {blog} = Astro.props;
const {data, slug} = blog
---

<div class=" p-[1rem] rounded-md   transition ease-in-out duration-300 blog-box" >
  <PostViewTitle
    slug={`/blog/${slug}`}
    {...data}
  >
  </PostViewTitle>
  <p class="break-all text-skin-base mb-2">
    {
      data.description
        ? data.description
        : blog.body.length > 140
          ? blog.body.substring(0, 140).replace(/#/gi, "") + "..."
          : blog.body
    }
  </p>
  <div class="text-right">
    <a class="hover:text-skin-active text-sm border rounded py-1 px-2" href={`/blog/${slug}`}>{t('home.readMore')}</a>
  </div>
</div>


<style>

.blog-box {
  transition: all 0.4s ease-in-out;
  border: 1px groove #ddd;
}

.blog-box:hover {
  background-color: lightgray;
  /* scale: 1.02; */
}

html[data-theme="dark"] .blog-box:hover {
  background-color: rgb(40, 42, 54)
}

</style>
